<div class="container full-height-container">
    <div class="card m-3 mt-5">
        <div class="card-header">
            <strong>Missed calls</strong> <span class="text-muted">(Product/Number)</span>
        </div>
        <div class="card-body">
            <table class="table">
                <tbody>
                    <% @missed_calls.each do |call| %>
                        <tr>
                            <td class="col-md-4">
                                <% if call.selected_product == 'ProgrammableVoice' %>
                                    <span>Programmable Voice</span>
                                <% else %>
                                    <span>Programmable SMS</span>
                                <% end %>
                            </td>
                            <td class="col-md-8">
                                <a href="tel:<%= call.phone_number %>">
                                    <i class="fa fa-phone"></i>
                                    <%= call.phone_number %>
                                </a>
                            </td>
                        </tr>
                    <%end %>
                </tbody>
            </table>
        </div>
    </div>
</div>
